.view-page {
  height: 100vh;
  background: #fff;
}

.page-content {
  background: #fff;
}

.operation-container {
  text-align: right;
  font-size: 12px;
  height: 50px;
  line-height: 50px;
  padding-top: 10px;
  background: #fff;
  width: 100%;
}

.btnContainer {
  position: fixed;
  text-align: center;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  width: 100%;
  background: #fff;
  height: 100px;
}

.image-container {
  float: left;
  position: relative;
  width: 25%;
  margin-top: 35px;
}

.image-check-container {
  font-size: 20px;
  position: absolute;
  bottom: 3px;
  right: 15px;
  border-radius: 26px 0 0 0;
  width: 20px;
  height: 20px;
  z-index: 9999;
  background: #fff;
}

.van-field__label {
  color: #000000 !important;
  font-size: 14px !important;
}

.van-cell {
  line-height: 35px !important;
}

.van-cell__left-icon-wrap {
  height: 35px !important;
}

input {
  height: 35px !important;
  line-height: 35px !important;
}

.van-field__body--text {
  line-height: 15px !important;
}

