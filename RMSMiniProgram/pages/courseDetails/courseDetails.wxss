.txt {
    color: #70788C;
    display: inline-block;
    font-size: 28rpx;
    line-height: 38rpx;
    width: 92%;
    margin-left: 4%;
}

.txt-item {
    font-size: 13px;
    color: #000000;
    text-align: justify;
}

.course-title {
    color: #000000;
    font-size: 14px;
    font-weight: bold;
    text-align: justify;
}

.box-module {
    /* display: table; */
    margin: 0 auto;
    /* width: 92%; */
}

.box-module .box-title {
    display: inline-block;
    font-size: 25rpx;
    font-weight: bold;
    color: #3c4a55;
    width: 100%;
    margin-top: 18rpx;
    margin-bottom: 18rpx;
    margin-left: 4%;
}


.playingVideo {
    position: fixed;
    top: 0;
    width: 100%;
}

.playingVideo video {
    width: 100%;
    height: 213px;
}

.courses-container {
    width: 100%;
}

