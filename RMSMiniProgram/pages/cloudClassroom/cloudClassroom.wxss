.courses-container {
  width: 100%;
  height: auto;
  /* border-bottom: 1px solid #eee; */
}

.course-name {
  font-size: 14px;
  margin-top: 3px;
  text-align: justify;
}

.course-img-container {
  float: left;
  margin-left: 10px;
}

.course {
  height: 63px;
}

.wrapper {
  display: flex;
  /* align-items: center; */
  justify-content: center;
  height: 100%;
}

.block {
  width: 100%;
  height: 150px;
  background-color: #fff;
  overflow: scroll;
}

image {
  width: 104px;
  height: 64px;
}


.course-context-container {
  width: 64%;
  float: left;
  margin-left: 3%;
}

.course-icon {
  line-height: 55px;
  float: right;
}


.navigator:hover {
  color: blue;
}

.filter-item {
  background-color: #F6F6F6;
  width: auto;
  height: 30px;
  /* float: left; */
  margin-left: 15px;
  line-height: 30px;
  padding-left: 10px;
  padding-right: 10px;
  margin-top: 5px;
  font-size: 13px;
  color: #7F7F7F;
  display: inline-block;
}

.search-item {
  background-color: #F6F6F6;
  width: auto;
  height: 30px;
  margin-left: 15px;
  line-height: 30px;
  padding-left: 10px;
  padding-right: 10px;
  margin-top: 13px;
  font-size: 13px;
  color: #7F7F7F;
  display: inline-block;
}

.filter-item-active {
  background: rgba(53, 152, 229, 0.11);
  color: rgb(102, 102, 102);
}

.no-more {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 12px;
  color: #969799;
}

.course-category-title {
  margin-left: 15px;
  font-weight: bold;
  margin-top: 15px;
  margin-bottom: 10px;
  font-size: 14px;
}

.submit-btn {
  margin-left: 15px;
  width: 116px;
}

.cancel-btn {
  width: 116px;
}

.empty-contianer {
  display: block;
  text-align: center;
  margin-top: 50%;
  font-size: 13px;
}